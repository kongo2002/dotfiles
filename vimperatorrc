" kongo .vimperatorrc

" just show the addon statusbar
set gui=none,tabs

" tab-complete search engines, smart-list
set complete=sl

" set title
set titlestring="vimperator"

" set maximum items in a listing
set maxitems=10

" show small numbers in tab corners
set tabnumbers

" tab switching options
noremap <Right> gt
noremap <Left> gT

" back in history
map <BS> <C-o>

" toggle tabline
map <A-Up> :set gui+=tabs<CR>
map <A-Down> :set gui+=notabs<CR>
