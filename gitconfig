	co = checkout
	df = diff
	dfc = diff --cached
	lg = log --graph --oneline --decorate --all
	lgd = log --graph --all --pretty=format:'%C(yellow)%h%Cred%d %Creset%s %Cblue(%ci)'
	lga = log --graph --all --pretty=format:'%C(yellow)%h%Cred%d %Creset%s %Cgreen[%an]'
	lgg = log --graph --all --pretty=format:'%C(yellow)%h%Cred%d %Creset%s %Cgreen[%an] %Cblue(%ci)'
	st = status --short --branch
	unadd = reset HEAD
	graph = log --graph --pretty=oneline --abbrev-commit
	graph-ext = log --graph --pretty=medium --abbrev-commit
	ffmerge = merge --ff-only
	bra = branch --all
